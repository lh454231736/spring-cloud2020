<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mytest.dao.PaymentDao">
    <insert id="insertPayment" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
         insert into tb_payment(serial) values (#{serial, jdbcType=VARCHAR})
    </insert>
    <select id="getPaymentById" parameterType="java.lang.Long" resultType="Payment">
        select id, serial from tb_payment
        where id = #{id, jdbcType=BIGINT}
    </select>
</mapper>